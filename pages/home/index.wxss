@import '../../app.wxss';

.home-page {
    min-height: 100vh;
    font-size: 30rpx;
}

.hd {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 600rpx;
    align-items: center;
    color: #fff;
    background: #666;
}

.hd .avatar {
    margin: 160rpx 0 40rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: #ccc;
}

.hd .nickname {
    font-size: 36rpx;
    line-height: 1;
}

.hd .blog-info {
    max-width: 550rpx;
    padding-top: 50rpx;
    color: #ddd;
}

.bd {
    margin-top: 600rpx;
    padding: 30rpx;
}


