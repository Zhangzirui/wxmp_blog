.comp-share {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 10000;
    background-color: rgba(0, 0, 0, 0.6);
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.comp-share .info {
    position: absolute;
    left: 0;
    bottom: 380rpx;
    width: 100%;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
}

.comp-share .main {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}

.comp-share .nav {
    display: flex;
    justify-content: center;
    padding: 20rpx 0;
    background-color: #fff;
}

.comp-share .btn {
    margin: 0;
    padding: 0;
    line-height: inherit;
    background-color: #fff;
}

.comp-share .zone {
    margin-left: 200rpx;
}

.comp-share button::after {
    display: none;
}

.comp-share .img {
    width: 100rpx;
    height: 100rpx;
}

.comp-share .cancel {
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    height: 80rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    text-align: center;
    background: #fff;
}

.comp-share .img-wrap {
    margin: 70rpx auto 0;
    width: 650rpx;
    height: 923rpx;
    overflow: scroll;
}


.comp-share .btn-save {
    width:330rpx;
    height:90rpx;
    border-radius:45rpx;
    background-image:linear-gradient(to right,#ff4739,#ff9f37);
    line-height:90rpx;
    text-align: center;
    color:#fff;
    margin:40rpx auto 0;
    font-size: 38rpx;
}

.comp-share .text {
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
}

.comp-share .shareCanvas {
    position: absolute;
    left: 100000rpx;
    top: -10000000rpx;
}
